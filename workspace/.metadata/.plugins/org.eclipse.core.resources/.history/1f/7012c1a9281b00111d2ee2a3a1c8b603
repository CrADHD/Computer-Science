	public static void waiting (int n){
        
        long t0, t1;

        t0 =  System.currentTimeMillis();

        do{
            t1 = System.currentTimeMillis();
        }
        while ((t1 - t0) < (n * 1000));
      while (t1 - t0 < n);
    }
	public static void task1()
	{
		Scanner in =new Scanner(System.in);
		int percent =50;
		int input;
		  System.out.println("You are in a bio class /n the teacher says there will be a quiz tomorrow /n and every thing she says will be on the quiz /n what will you do?");
		  waiting(1);
		  //+35%
		  System.out.println("1-You listen and take notes on the lecture");
		 waiting(1);
		  //-10%
		  System.out.println("2-you chat with your friends in class ");
		  waiting(1);
		  //-15%
		  System.out.println("3-Text with friends");
		  waiting(1);
		  System.out.println("choose 1, 2 ,or 3");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent+35;
			  
		  }
		  if(input == 2)
		  {
			  percent=percent-10;
		  }
		  if(input == 3)
		  {
			  percent=percent-15;
		  }
		  waiting(1);
		  System.out.println("The next day when you walk in to class you find a paper on the desk it, is the quiz");
		  waiting(1);
		  System.out.println("what do you do?");
		  waiting(1);
		  //-29%
		  System.out.println("1-randomly guess");
		  waiting(1);
		  //+10
		  System.out.println("2-Use your brain and put answers down accordingly ");
		  waiting(1);
		  System.out.println("choose 1 or 2");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent-29;
		  }
		  if(input == 2)
		  {
			  percent=percent+10;
		  }
		  int x = (int) (Math.random() * 101);
		  System.out.println(x);
		  if(x > percent)
		  {
			  System.out.println("You have failed ");
			  waiting(1);
			  System.out.println("you can't take life any more");
			  waiting(1);
			  System.out.println("You then drop out and then commit suicide!!!!!!");
			  waiting(1);
			  System.out.println("you now must now try life again");
			  waiting(1);
			  System.out.println("remember kids there are no retakes for life");
			  program72.yu++;
		  }
		  if(x<percent)
		  {
			  System.out.println("You have passed Task one");
			  waiting(1);
			  System.out.println("Well done!!!!!!!!!!!");
			  waiting(1);
			  System.out.println("Now for task two");
			  program72.pass=2;
		  }
	}
