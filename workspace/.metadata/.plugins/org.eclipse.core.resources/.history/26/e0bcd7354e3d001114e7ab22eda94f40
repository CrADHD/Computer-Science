public class Recursion6 {

	public static void main(String[] args) {
		
		int x=1;
		while(x<6){
			
			int sum=factorial(x);
			System.out.println(sum);
			x=x+1;
			
		}
	}	
	
	public static int factorial(int y){
		
		if(y==1){
			return 1;
		}
		else{
			int oneless=y-1;
			return y+factorial(oneless);
		}
		
	}
}
