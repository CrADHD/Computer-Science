public class Recursion5 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		int x = 1;
		while(x<6){
			
			factorial(x);
			x=x+1;
			
		}
		
		System.out.println(x);
		
	}	
	
	public static int factorial(int x){
		
		int sum=0;
		if(x==0){
			return sum;
		}
		else{
			sum=sum+x;
			x=x-1;
			factorial(x);
		}
		return sum;
		
	}
	
}
