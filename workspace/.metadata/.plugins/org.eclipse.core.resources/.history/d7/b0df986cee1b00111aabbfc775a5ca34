public class CollegeTrip {
public static int pass=0;     // 
public static int yu=0;       // 
	
	public static void main(String[] args) {
		//scanner for input 
		Scanner in =new Scanner(System.in);	
		//
	    System.out.println("Welcome to the Summer Trip \n After your first year at \n college you have gone on vacation. \n Lets see if you can get a simple cookie!");
	    int x = 0;
	    int v;
	    System.out.println("Press any number for a free cookie.");
	    v=in.nextInt();	
	    while(CollegeTrip.pass !=5)
	    {
			    	System.out.println("Task one");
			    	waiting(1);
			    	task1();
			    	
			    
			    if(CollegeTrip.pass !=0)
			    {
			    	waiting(1);
			    	task1();
			    	
			    }
			    if(CollegeTrip.pass !=1)
			    {
			    	task1();
			    }
			    if(CollegeTrip.pass !=2)
			    {	
			    waiting(1);
			    task3();
			    	
			    }
			    if(CollegeTrip.pass !=3)
			    {
			    	waiting(1);
			    	task4();
			    }
			    if(CollegeTrip.pass !=4)
			    {
			    	waiting(1);
			    	task5();
			    }	
			    if(CollegeTrip.pass !=5)
			    {	
			}
	    }    
	}
	public static void waiting (int n){
        
        long t0, t1;

        t0 =  System.currentTimeMillis();

        do{
            t1 = System.currentTimeMillis();
        }
        while ((t1 - t0) < (n * 1000));
      while (t1 - t0 < n);
    }
	
	
	
	
	public static void task1()
	{
		Scanner in =new Scanner(System.in);
		int percent =50;
		int input;
		  System.out.println("Where will you go? Decide now. NOW!");
		  waiting(1);
		  //+35%
		  System.out.println("1-To the beach?");
		 waiting(1);
		  //-10%
		  System.out.println("2-To the shark filled ocean?");
		  waiting(1);
		  //-15%
		  System.out.println("3-To a fallout bunker?");
		  waiting(1);
		  System.out.println("choose 1, 2 ,or 3");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent+35;
			  
		  }
		  if(input == 2)
		  {
			  percent=percent-10;
		  }
		  if(input == 3)
		  {
			  percent=percent-15;
		  }
		  waiting(1);
		  System.out.println("You arive at your destination. What do you do?");
		  waiting(1);
		  //-29%
		  System.out.println("1-Go swiming despite the people running in terror away from it");
		  waiting(1);
		  //+10
		  System.out.println("2-Use common sense and go to your hotel");
		  waiting(1);
		  System.out.println("choose 1 or 2");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent-29;
		  }
		  if(input == 2)
		  {
			  percent=percent+10;
		  }
		  int x = (int) (Math.random() * 101);
		  if(x > percent){
			  System.out.println("Despite the answer being obvious");
			  waiting(1);
			  System.out.println("you decide to go against the norm and");
			  waiting(1);
			  System.out.println("get trampled by the people only to be");
			  waiting(1);
			  System.out.println("trampled on again by monsters.");
			  waiting(1);
			  System.out.println("I you want a cookie you'll have to try harder than that...");
			  CollegeTrip.yu++;
			  }
		  if(x<percent)
		  {
			  System.out.println("You sit in your hotel room and");
			  waiting(1);
			  System.out.println("watch as monsters rampage the city.");
			  waiting(1);
			  System.out.println("Cookie latter. Task two first.");
			  CollegeTrip.pass=1;
		  }
	}
	public static void task2()
	{
		Scanner in =new Scanner(System.in);
		int percent =50;
		int input;
		
		System.out.println("You have to do a BIG project for English");
		 waiting(1);
		 //-10%
		 System.out.println("1-Every night you watch TV while doing the project");
		 waiting(1);
		 //+40
		 System.out.println("2-Plan out the project and do a little bit every day");
		 waiting(1);
		 //-45%
		 System.out.println("3-Do nothing on the project");
		 waiting(1);
		 System.out.println("choose 1, 2 ,or 3");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent-10;
			  
		  }
		  if(input == 2)
		  {
			  percent=percent+40;
		  }
		  if(input == 3)
		  {
			  percent=percent-45;
		  }
		  System.out.println("When you get to class when the project is due/n the teacher says you have 5 mins to turn it in");
		  waiting(1); 
		  System.out.println("You can,");
		  waiting(1);
		  //+5%
		  System.out.println("1-try and fix any errors you find");
		  waiting(1);
		  //-1%
		  System.out.println("2-sit back and relax you feel good about your project");
		  waiting(1);
		  System.out.println("choose 1 or 2");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent+5;
		  }
		  if(input == 2)
		  {
			  percent=percent-1;
		  }
		  int x = (int) (Math.random() * 101);
		  System.out.println(x);
		  if(x > percent)
		  {
			  System.out.println("You have failed ");
			  waiting(1);
			  System.out.println("you can't take life any more");
			  waiting(1);
			  System.out.println("You then drop out and then commit suicide!!!!!!");
			  waiting(1);
			  System.out.println("you now must now try life again");
			  waiting(1);
			  System.out.println("remember kids there are no retakes for life");
			  CollegeTrip.yu++;
		  }
		  if(x<percent)
		  {
			  System.out.println("You have passed Task two");
			  waiting(1);
			  System.out.println("Well done!!!!!!!!!!!");
			  waiting(1);
			  System.out.println("Cookie latter. Task three first.");
			  CollegeTrip.pass=2;
		  }
		  
		 
	}
