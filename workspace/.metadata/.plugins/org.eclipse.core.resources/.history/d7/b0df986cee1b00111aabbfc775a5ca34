		  System.out.println("1-turn it in with the rubric");
		  waiting(1);
		  //-1%
		  System.out.println("2-sit back and relax don't turn in the rubric");
		  waiting(1);
		  System.out.println("choose 1 or 2");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent+9;
		  }
		  if(input == 2)
