	public static void task5()
	{
		Scanner in =new Scanner(System.in);
		int percent =50;
		int input;
		System.out.println("There is the Final for Math tomorrow");
		waiting(1);
		//-40%
		 System.out.println("1-Party non stop");
		 waiting(1);
		 //+40
		 System.out.println("2-Study a bunch ");
		 waiting(1);
		 //-30%
		 System.out.println("3-Play MW3");
		 waiting(1);
		 System.out.println("choose 1, 2 ,or 3");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent-40;
			  
		  }
		  if(input == 2)
		  {
			  percent=percent+40;
		  }
		  if(input == 3)
		  {
			  percent=percent-30;
		  }
		  System.out.println("At Lunch before the final you");
		  waiting(1); 
		  System.out.println("You can,");
		  waiting(1);
		  //+9%
		  System.out.println("1-Last Minute Studying");
		  waiting(1);
		  //-9%
		  System.out.println("2-sit back and relax");
		  waiting(1);
		  System.out.println("choose 1 or 2");
		  input=in.nextInt();
		  if(input == 1)
		  {
			  percent=percent+9;
		  }
		  if(input == 2)
		  {
			  percent=percent-9;
		  }
		  int x = (int) (Math.random() * 101);
		  System.out.println(x);
		  if(x > percent){
			  waiting(1);
			  System.out.println("HOW DID YOU MAKE IT THIS FAR?");
			  CollegeTrip.yu++;
		  }
		  if(x<percent)
		  {
			  System.out.println("You have passed Task five");
			  waiting(1);
			  System.out.println("HERE'S A BROWSER COOKIE!");
			  waiting(1);
			  CollegeTrip.pass=5;
		  }
	}

